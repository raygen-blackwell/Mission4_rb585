@{
}

@model GradeCalcModel;

<!--Grade Form-->
<h2>Grade Calculator</h2>
<form method="post">
    <fieldset>
        <label>Assignments</label>
        <input id="AGrade" asp-for="Assign"/><br />
        <label>Group Project</label>
        <input id="GPGrade" asp-for="Group"/><br />
        <label>Quizzes</label>
        <input id="QGrade" asp-for="Quiz"/><br />
        <label>Midterm Exam</label>
        <input id="MEGrade" asp-for="Midterm"/><br />
        <label>Final Exam</label>
        <input id="FEGrade" asp-for="Final"/><br />
        <label>INTEX</label>
        <input id="IGrade" asp-for="Intex"/><br />
        <input type="submit" id="btnCalc" value="Calculate Grade" />
        <h3><span id="LetterGrade"></span></h3>
        <div asp-validation-summary="All"></div>
    </fieldset>
</form>